@model WebUI.Models.FlightSearchDataModel

@{
    ViewBag.Title = "Home";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            @Html.Partial("SearchFilterPartial", Model)
        </div>
        <div class="col-sm-9">
            <div id="featuredDestinations" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#featuredDestinations" data-slide-to="0" class="active"></li>
                    <li data-target="#featuredDestinations" data-slide-to="1"></li>
                    <li data-target="#featuredDestinations" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Resources/Paris.jpg">
                        <div class="carousel-caption">
                            <h2>@Html.ActionLink("Paris", "FeaturedDestinations", "Search", new { featuredDestination = "paris" }, new { @class = "deco-none"})</h2>
                            <p>From £85</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Resources/NewYork.jpg">
                        <div class="carousel-caption">
                            <h2>@Html.ActionLink("New York", "FeaturedDestinations", "Search", new { featuredDestination = "new york" }, new { @class = "deco-none" })</h2>
                            <p>From £570</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Resources/Amsterdam.jpg">
                        <div class="carousel-caption">
                            <h2>@Html.ActionLink("Amsterdam", "FeaturedDestinations", "Search", new { featuredDestination = "amsterdam" }, new { @class = "deco-none" })</h2>
                            <p>From £85</p>
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#featuredDestinations" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#featuredDestinations" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

